<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="common">
	<!-- 公共执行语句 -->
	<!-- 分页后面的 -->
	<sql id="pager">
        <if test="SIDX != null and SIDX != ''">
			ORDER BY  ${SIDX} ${SORD}
		</if>
			LIMIT #{START}, #{ROWS} 
	</sql>
	
	<sql id="pagerByPage">
        <if test="SIDX != null and SIDX != ''">
			ORDER BY  ${SIDX} ${SORD}
		</if>
			LIMIT ((#{START} -1)*#{ROWS}) , #{ROWS} 
	</sql>
</mapper>